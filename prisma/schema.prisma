// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Authentication Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  username      String?   @unique

  accounts          Account[]
  sessions          Session[]
  repositories      Repository[]
  syncJobs          SyncJob[]
  analyticsSnapshot AnalyticsSnapshot?
  insightCaches     InsightCache[]

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  syncCheckpoint SyncCheckpoint?

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// GitHub Analytics / Repository Syncing Models
// ============================================

enum SyncStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

model Repository {
  id            String    @id @default(cuid())
  userId        String
  githubId      Int       @unique
  name          String
  fullName      String // owner/repo format
  description   String?
  language      String? // Primary language
  stars         Int       @default(0)
  forks         Int       @default(0)
  isPrivate     Boolean   @default(false)
  isFork        Boolean   @default(false)
  isArchived    Boolean   @default(false)
  defaultBranch String    @default("main")
  lastSyncedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  commits Commit[]

  // Indexes
  @@index([userId])
  @@index([githubId])
  @@map("repositories")
}

model Commit {
  id           String   @id @default(cuid())
  repositoryId String
  sha          String // Git commit hash
  message      String   @db.Text
  authorName   String?
  authorEmail  String?
  authorDate   DateTime
  additions    Int      @default(0)
  deletions    Int      @default(0)
  filesChanged Int      @default(0)
  createdAt    DateTime @default(now())

  // Metadata for enhanced analytics
  // Stores: { fileExtensions: { "ts": 12, "json": 2 }, isOutlier: false, outlierReason?: string }
  metadata Json?

  // Relations
  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  // Constraints & Indexes
  @@unique([repositoryId, sha])
  @@index([repositoryId])
  @@index([authorDate(sort: Desc)])
  @@index([repositoryId, authorDate])
  @@map("commits")
}

model SyncJob {
  id             String     @id @default(cuid())
  userId         String
  status         SyncStatus @default(PENDING)
  totalRepos     Int        @default(0)
  processedRepos Int        @default(0)
  totalCommits   Int        @default(0)
  errorMessage   String?    @db.Text
  startedAt      DateTime   @default(now())
  completedAt    DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@index([status])
  @@map("sync_jobs")
}

// ============================================
// Analytics / Pre-calculated Metrics
// ============================================

model AnalyticsSnapshot {
  id     String @id @default(cuid())
  userId String @unique

  // Summary Statistics
  totalRepos     Int @default(0)
  totalCommits   Int @default(0)
  totalAdditions Int @default(0)
  totalDeletions Int @default(0)
  totalStars     Int @default(0)
  totalForks     Int @default(0)

  // Streak Data
  currentStreak  Int       @default(0)
  longestStreak  Int       @default(0)
  lastCommitDate DateTime?
  isActiveToday  Boolean   @default(false)

  // JSON Statistics (flexible structure)
  languageStats        Json? // { "TypeScript": 45, "Python": 30 }
  dailyCommits         Json? // { "2024-01-15": 5, "2024-01-16": 3 }
  dayOfWeekStats       Json? // { "Monday": 10, "Tuesday": 15 }
  hourlyStats          Json? // { "9": 5, "14": 10, "22": 3 }
  repoStats            Json? // [{ id, name, commits, stars }]
  topLanguages         Json? // [{ language, count, percentage }]
  commitQualityMetrics Json? // { qualityGrade, conventionalCommitScore, insights, ... }
  codeImpactMetrics    Json? // { impactScore, churnRate, productiveRate, churnGauge, insights, ... }

  // Computed Insights
  averageCommitsPerDay Float   @default(0)
  mostProductiveDay    String?
  mostProductiveHour   Int?

  // Metadata
  calculatedAt   DateTime  @default(now())
  dataRangeStart DateTime?
  dataRangeEnd   DateTime?

  // Relations
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  generatedInsights InsightCache[]

  // Indexes
  @@index([userId])
  @@index([calculatedAt])
  @@map("analytics_snapshots")
}

// ============================================
// AI Insights Caching
// ============================================

model InsightCache {
  id         String @id @default(cuid())
  userId     String
  snapshotId String

  // Relations
  user     User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  snapshot AnalyticsSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  // Cache Logic
  dataHash String @unique // Hash of the specific snapshot data used to generate this

  // AI Response (structured JSON)
  // Structure: { patterns: string[], strengths: string[], suggestions: string[] }
  insights Json

  // Metadata
  model      String? // e.g., "claude-3-5-sonnet"
  tokensUsed Int? // For cost tracking

  createdAt DateTime @default(now())
  expiresAt DateTime // TTL (Time To Live)

  @@index([userId])
  @@index([expiresAt]) // Useful for cleanup cron jobs
  @@map("insight_caches")
}

// ============================================
// Sync Checkpoint for Resumable Syncs
// ============================================

model SyncCheckpoint {
  userId              String @id
  lastProcessedRepo   String
  lastProcessedCommit String
  timestamp           BigInt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sync_checkpoints")
}

// ============================================
// AI Usage Tracking for Quota Management
// ============================================

model AIUsage {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime @db.Date // Tracks usage per day
  tokensUsed    Int      @default(0)
  requestsCount Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
  @@map("ai_usage")
}
