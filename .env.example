# =============================================================================
# DEVINSIGHTS - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# For Neon/Vercel Postgres, add ?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/devinsights?schema=public"

# Optional: Direct database URL for connection pooling (recommended for production)
# DIRECT_URL="postgresql://user:password@localhost:5432/devinsights"

# =============================================================================
# NEXTAUTH.JS - Authentication
# =============================================================================
# Generate a random secret with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# CRITICAL: Use a strong random string in production!
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Production URL (update with your actual domain)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# GITHUB OAUTH
# =============================================================================
# Create a GitHub OAuth App: https://github.com/settings/developers
# Authorization callback URL: {NEXTAUTH_URL}/api/auth/callback/github

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# =============================================================================
# AI/LLM PROVIDER (Optional - for AI-powered insights)
# =============================================================================
# Groq API Key (https://console.groq.com/keys)
# Leave empty to use mock AI for development
GROQ_API_KEY=""

# Force mock AI even if API key is present (for testing)
# USE_MOCK_AI="true"

# =============================================================================
# REDIS (Optional - for queue management and caching)
# =============================================================================
# Redis connection string for BullMQ job queues
# Format: redis://[:password@]host[:port][/database]
# REDIS_URL="redis://localhost:6379"

# =============================================================================
# ENVIRONMENT & DEPLOYMENT
# =============================================================================
# Node environment (development | production | test)
NODE_ENV="development"

# =============================================================================
# OPTIONAL: Additional Configuration
# =============================================================================
# Enable/disable specific features
# ENABLE_ANALYTICS="true"
# ENABLE_AI_INSIGHTS="true"
# LOG_LEVEL="info" # debug | info | warn | error

# Rate limiting
# RATE_LIMIT_MAX_REQUESTS="100"
# RATE_LIMIT_WINDOW_MS="60000"

# =============================================================================
# NOTES
# =============================================================================
# - All values should be strings (no spaces around =)
# - Use double quotes for values with special characters
# - Boolean values: "true" or "false" (as strings)
# - Comments are for documentation only and won't be loaded
